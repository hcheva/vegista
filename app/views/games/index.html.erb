<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "My games", games_path, class:"sidebar-link active" %></li>
    </ul>
    
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        My games
      </div>
      <div class="panel-body">
        <% @games.each do |game| %>
        <div class="row">
          <div class="col-md-2">
            <%= image_tag game.photos[0].image.url(:thumb) if game.photos.length > 0 %>
          </div>
          <div class="col-md-7">
             <h4><%= game.listing_name %></h4>
          </div>    
          
        </div>
          
        <% end %>
      </div>
    </div>
    
  </div>
</div>